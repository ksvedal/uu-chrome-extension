{
  "manifest_version": 3,

  "name": "UU Extension",
  "description": "UU Extension",
  "version": "1.0",

  "action": {
    "default_icon": "scan.png",
    "default_title": "Open Chrome Extension"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/open_sidepanel.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
