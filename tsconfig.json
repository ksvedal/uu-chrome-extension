{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "esnext",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [ "node_modules/@types" ]
    },
    "exclude": [
        "node_modules",
        "__test__",
     ],

    "typedocOptions":{
        "entryPoints": [
            "./src/**/*"
          ]
    }
}